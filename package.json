{
  "name": "jotai-idb",
  "version": "1.1.0",
  "description": "A typed, reactive IndexedDB state manager powered by Jotai. Persist and sync your application state with minimal boilerplate, full type safety, and Jotai's atom-based architecture.",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "check": "biome check . && bun run format:md:check",
    "check:fix": "biome check . --fix && bun run format",
    "dev": "rslib build --watch",
    "format": "bun run format:rest && bun run format:md",
    "format:md": "mdfmt \"**/*.md\" --write",
    "format:md:check": "mdfmt \"**/*.md\" --check",
    "format:rest": "biome format --write",
    "test": "rstest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@rewdy/md-formatter": "^0.4.0",
    "@rslib/core": "^0.18.2",
    "@rstest/core": "^0.6.6",
    "@types/node": "^24.10.1",
    "fake-indexeddb": "^6.2.5",
    "husky": "^9.1.7",
    "jotai": "^2.15.1",
    "react": "^19.2.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "jotai": ">=2.0.0",
    "react": ">=18.0.0"
  },
  "peerDependencyMeta": {
    "react": {
      "optional": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rewdy/jotai-idb.git"
  },
  "bugs": {
    "url": "https://github.com/rewdy/jotai-idb/issues"
  },
  "homepage": "https://github.com/rewdy/jotai-idb#readme",
  "keywords": [
    "jotai",
    "indexeddb",
    "state-management",
    "reactive",
    "typescript",
    "react",
    "storage",
    "database"
  ],
  "publishConfig": {
    "provenance": true
  },
  "author": "Andrew Meyer",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "license": "MIT"
}
